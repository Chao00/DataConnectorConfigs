{
    "version": 1,
    "request": {
        "url": "https://dblp.org/search/publ/api?format=json",
        "method": "GET",
        "params": {
            "q": true,
            "h": false,
            "f": false,
            "author": {
                "template": "author:{{first_name}}_{{last_name}}:",
                "required": false,
                "removeIfEmpty": true,
                "toKey": "q"
            }
        },
        "pagination": {
            "type": "offset",
            "offsetKey": "f",
            "limitKey": "h",
            "maxCount": 1000
        },
        "search": {
            "key": "q"
        }
    },
    "response": {
        "ctype": "application/json",
        "tablePath": "$.result.hits.hit[*].info",
        "schema": {
            "authors": {
                "target": "$.authors.author[*].text",
                "type": "object"
            },
            "title": {
                "target": "$.title",
                "type": "string"
            },
            "venue": {
                "target": "$.venue",
                "type": "object"
            },
            "pages": {
                "target": "$.pages",
                "type": "string"
            },
            "year": {
                "target": "$.year",
                "type": "string"
            },
            "type": {
                "target": "$.type",
                "type": "string"
            },
            "url": {
                "target": "$.url",
                "type": "string"
            }
        },
        "orient": "records"
    }
}